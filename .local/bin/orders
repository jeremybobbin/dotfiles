#!/bin/sh

dir="$HOME/.local/share/lambda"
cookies="$dir/orders"

mkdir -p "$(dirname $cookies)"
touch $cookies
url='https://lambdalabs.com'
#url='localhost:8080'
CURL='curl_tee'

curl_tee() {
	[ -z "$tmp" ] && tmp=$(mktemp)
	curl $* | tee $tmp
}

usage() {
	cat <<- "EOF"
	$0 login <username> <password>
	$0 search word[ word[ ...]]]
	EOF
}

metadata() {
	$CURL --cookie-jar "$cookies" \
		-L "$url/tools/orders" >/dev/null
}

action() {
	sed -En "/form/ s/.*action=\"([^\"]*)\".*/\1/p" $*
}

csrf() {
	sed -En "/name='csrfmiddlewaretoken'/ s/.*value='([^']*)'.*/\1/p" $*
}

login() {
	metadata
	echo URL "${url}$(action $tmp)"
	echo USERNAME "$1"
	echo PASSWORD "$2"
	echo "csrfmiddlewaretoken=$(csrf $tmp)" 
	curl --cookie-jar "$cookies" \
		-H "cookie: csrftoken=$(csrf $tmp)" \
		-H 'referer: https://lambdalabs.com/e7f83f0e74ab48fd99743be3de4c527b/admin/login/?next=/tools/orders' \
		--data-urlencode "username=$1" \
		--data-urlencode "password=$2" \
		--data "csrfmiddlewaretoken=$(csrf $tmp)" \
		-L "${url}$(action $tmp)" 
	echo POST LOGIN
}

search_raw() {
	$CURL --data-urlencode "search=$@" \
		--cookie "$cookies" \
		-G "$url/api/orders"
}

search() {
	if [ ! -f $cookies ]; then
		cat 1>&2 <<- "EOF"
		$cookies file doesn't exist.
		Please log in via `$0 login`
		EOF

		exit 1
	fi

	curl --data-urlencode "search=$@" \
		--cookie "$cookies" \
		-G "$url/api/orders"
}

download_with_cookies() {
	curl -f --cookie "$cookies" \
		-G "$1" -o - 2> /dev/null
}

# With cache
download() {
	out_dir="$dir/$1"

	if [ ! -d $out_dir ]; then
		mkdir -p "$out_dir"
	fi

	out_file="$out_dir/$(basename $2)"

	if [ -f $out_file ]; then
		echo $out_file
		return 0
	fi

	download_with_cookies "$2" > "$out_file" || {
		echo "Failed to download $(basename "$out_file")" 1>&2;
		rm -f "$out_file"
		return 1;
	}

	echo $out_file
}

pdf_dl() {
	tmp=$(mktemp -d)
	for path in $(search $@ | jq -r '.data[].pdf_url' | tr -d \"); do
		download 'invoice' "$url$path"
	done
}

build_dl() {
	tmp=$(mktemp -d)
	for path in $(search $@ | jq -r '.data[].build_sheet_url' | tr -d \"); do
		download 'build_sheet' "$url$path"
	done
}

main() {
	case $1 in
		login)
			shift
			login "$1" "$2"
			;;
		search)
			shift
			search "$@"
			;;
		search_raw)
			shift
			search_raw "$@"
			;;
		pdf)
			shift
			pdf_dl "$@"
			;;
		metadata)
			shift
			metadata "$@"
			;;
		build)
			shift
			build_dl "$@"
			;;
		*)
			usage
			exit 1
			;;
	esac
}

main $@
