#!/bin/sh
# Print value to be exported to PS1

[ -z "$SSH_CLIENT" ] &&
echo "\[$(tput bold)\]\[$(tput setaf 0)\][\[$(tput setaf 2)\]\u\[$(tput setaf 0)\]@\[$(tput setaf 6)\]\h \[$(tput setaf 1)\]\W\[$(tput setaf 0)\]]\[$(tput setaf 7)\]\\$ \[$(tput sgr0)\]" ||
echo "\[$(tput bold)\]\[$(tput setaf 8)\][\[$(tput setaf 2)\]\u\[$(tput setaf 8)\]@\[$(tput setaf 2)\]\h \[$(tput setaf 1)\]\W\[$(tput setaf 8)\]]\[$(tput setaf 7)\]\\$ \[$(tput sgr0)\]"
