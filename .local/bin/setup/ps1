#!/bin/sh
# Print value to be exported to PS1

[ -z "$SSH_CLIENT" ] &&
	echo "$(tput bold)$(tput setaf 0)[$(tput setaf 2)\$(id -u -n)$(tput setaf 0)@$(tput setaf 6)\$(hostname) $(tput setaf 1)\$(pwd | sed "s.$HOME.\~.g" | grep -o '[^/]*$')$(tput setaf 0)]$(tput setaf 7)\$( [ $(id -u) = 0 ] && echo \# || echo \$ ) $(tput sgr0)" ||
	echo "$(tput bold)$(tput setaf 0)[$(tput setaf 2)\$(id -u -n)$(tput setaf 0)@$(tput setaf 2)\$(hostname) $(tput setaf 1)\$(pwd | sed "s.$HOME.\~.g" | grep -o '[^/]*$')$(tput setaf 0)]$(tput setaf 7)\$( [ $(id -u) = 0 ] && echo \# || echo \$ ) $(tput sgr0)"
