$include /etc/inputrc
set keyseq-timeout 10

set editing-mode vi

set show-mode-in-prompt on
set vi-ins-mode-string \1\e[6 q\2
set vi-cmd-mode-string \1\e[2 q\2

set keymap vi-command

Tab: alias-expand-line

"\C-l":"I clear; ls \eD\C-M"
"\C-u":"I cd ..; clear; ls \eD\C-M"

"\el":"A | less"
"\es":"Isudo "
":":"cc vimctl '<C-\\><C-N>:'\C-M\e"
"-":"cc vimctl -e 'Explore .'\C-M\e"
"]b":"cc vimctl -e 'bnext'\C-M\e"
"[b":"cc vimctl -e 'bprev'\C-M\e"
"]B":"cc vimctl -e 'blast'\C-M\e"
"[B":"cc vimctl -e 'bfirst'\C-M\e"
"gt":"cc vimctl -e 'tabnext'\C-M\e"
"gT":"cc vimctl -e 'tabprev'\C-M\e"

set keymap vi-insert

"\C-l":"\eI clear; ls \eD\C-M"
"\C-u":"\eIcd ..; clear; ls \eD\C-M"

"\el":"\eA | less"
"\es":"\eIsudo "

# Color files by types
set colored-stats On
# Append char to indicate type
set visible-stats On
# Mark symlinked directories
set mark-symlinked-directories On
# Color the common prefix
set colored-completion-prefix On
# Color the common prefix in menu-complete
set menu-complete-display-prefix On

set completion-ignore-case On
set completion-map-case On
