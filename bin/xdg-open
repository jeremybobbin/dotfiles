#!/bin/sh
tmp="$HOME/Downloads/"
for arg; do
	echo "$arg"
done | awk -v "tmp=$tmp" '
	# URI
	/^(ftps?|https?:)\/\// && /\.(gz|jpg|mkv|pdf|png|txt)$/ {
                  printf "wget -P %s \"%s\";\n", tmp, $0; sub(/.*\//, tmp) }
	/\.gz$/ && !/\.tar\.gz$/ {
	          sub(/\.gz$/, ""); printf "zcat \"%s.gz\" > \"%s\";\n", $0, $0 }
	/^(https?:\/\/)?(www\.)?(youtube.com\/watch\?|youtu\.be\/|bitchute\.com\/video)/ {
	          printf "mpv --record-file=video-dump \"%s\";\n", $0; next }
	/^https?:\/\//       { printf "surf \"%s\";\n", $0;      next }
	/\.(jpg|png)$/             { printf "sxiv \"%s\";\n", $0;       next }
	/\.(mov|mp[34])$/          { printf "mpv \"%s\";\n", $0;       next }
	/\.pdf$/                   { printf "zathura \"%s\";\n", $0;   next }
	/\.(txt|log)$/             { printf "consume < \"%s\";\n", $0; next }
' | sh
