#!/bin/sh
actions='
	actions["Primary Clipboard"]   = "xclip -sel primary";
	actions["Secondary Clipboard"] = "xclip -sel clipboard";
	actions["XDG Open"]            = "xargs xdg-open" 
'

action() {
	awk "BEGIN { $actions; for (a in actions) print a; }" | dmenu -i |
		awk " BEGIN { $actions; } { print actions[\$0]; }"
}

exec $(action)

