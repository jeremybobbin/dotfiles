#!/bin/sh

# Apps
super + shift + Return
	$TERMINAL


super + p
	$TERMINAL -e htop


super + i
	discord

super + s
	search

# Bluetooth
super + b
	bluetooth_connect $BLUETOOTH_DEVICE

control + b
	bluetooth_status $BLUETOOTH_DEVICE

# Audio
super + m
	$TERMINAL -e ncmpcpp

super + a
	$TERMINAL -e pulsemixer

XF86AudioPlay
	mpc toggle

XF86AudioStop
	mpc pause

XF86AudioNext
	mpc next

XF86AudioPrev
	mpc prev

# Utils
Print
	maim -s -o | xclip -selection c -t image/png

super + e
	emoji | xclip -selection c

super + F4
	reset_theme
