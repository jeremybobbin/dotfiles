# Rust Related 
# Need to escape so that alias generator doesn't evaluate
vct	ct=$(ct) && v $ct

# Shell
o		open
e		exit
ll		ls -al
new		(st -c "cd $PWD" & disown)

# Corresponds with rm and cd_wrapper functions
rm	rm_wrapper


sp	source ~/.profile
sbrc	source ~/.bashrc

vp	v ~/.profile
vbp	v ~/.profile
vxp	v ~/.xprofile



vbrc	v ~/.bashrc
virc	v ~/.inputrc
vxrc	v ~/.xinitrc
vvrc	v ~/.vimrc
vvrcd	v ~/.vim

vxhk	v ~/.config/sxhkd/sxhkdrc
varc	v ~/.config/aliasrc
vgrc	v ~/.config/globalsrc

# Administration
sc	systemctl
ssc	sudo systemctl

# Clipboard
xc	xclip -selection
cb	xc c
pcb	xc p
p2c	pcb -o - | cb
c2p	cb -o - | pcb

# Apps
g	git
sv	sudo nvim
n	nnn
z	zathura
# Big O vim for vertical windows
vim	nvim
v	nvim -O

# Media
rec	ffmpeg -video_size 1920x1080 -framerate 20 -f x11grab -i :0.0+0,0 "$HOME/Media/Video/ScreenCast/$(date +%s).mp4"
pm	pulsemixer

# Colors
ls	ls -hN --color=auto --group-directories-first
ip	ip --color=auto
grep	grep --color=auto
diff	diff --color=always
yay	yay --color=always
pacman	pacman --color always
less	less -R

# Timers
25	termdown 25m 
5	termdown 5m

# Note
note	v ~/Notes/Self/$(date +%F)

# Common Dir
uls	~/.local/share
ulb	~/.local/bin
cfg ~/.config
cch ~/.cache

dl	~/Downloads
mda	~/Media
doc	~/Media/Documents
nts	~/Notes
prj	~/Projects
rs	~/Projects/Rust
msc	~/Media/Audio/Music
img	~/Media/Images
vdo	~/Media/Video
