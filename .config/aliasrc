n	nnn
z	zathura
# Big O vim for vertical windows
vim	nvim
v	nvim -O

# Media
rec	ffmpeg -video_size 1920x1080 -framerate 20 -f x11grab -i :0.0+0,0 "$HOME/Media/Video/ScreenCast/$(date +%s).mp4"
pm	pulsemixer

# Colors
ls	ls --color=auto --group-directories-first -hN 
ip	ip --color=auto
grep	grep --color=auto 
diff	diff --color=always
yay	yay --color=always
pacman	pacman --color always
less	less -R
highlight highlight --out-format=ansi 

mpv mpv --input-ipc-server="/tmp/mpv_$(date +%s%N)"

# Timers
25	termdown 25m 
5	termdown 5m

# Note
note	v ~/Notes/Self/$(date +%F)

# Networking
p8	ping 8.8.8.8
p42	ping 4.2.2.2
t8	traceroute 8.8.8.8
t42	traceroute 4.2.2.2
