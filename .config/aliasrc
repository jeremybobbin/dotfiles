vxhk	v ~/.config/sxhkd/sxhkdrc
varc	v ~/.config/aliasrc

# Administration
sc	systemctl
ssc	sudo systemctl

# Clipboard
xc	xclip -selection
cb	xc c
pcb	xc p
p2c	pcb -o - | cb
